.PHONY: testlib clean

open ../../../config

TESTS[] =
   zpipe
   gunzip_s

OCAMLINCLUDES += ..

foreach(name, $(TESTS))
   OCAML_OTHER_LIBS += unix mlzlib
   OCAML_LINK_FLAGS = -linkall
   OCamlProgram($(name), $(name))
   $(name)$(EXE): $(addsuffix .ml, $(name))

testlib: $(TESTS)$(EXE)

clean:
   $(CLEAN) $(TESTS)$(EXE)
