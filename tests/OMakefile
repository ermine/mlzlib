.PHONY: testlib clean

TESTS[] =
   zpipe
   gunzip_s

OCAMLINCLUDES += ..

foreach(name, $(TESTS))
   OCAML_OTHER_LIBS += unix
   OCAML_LIBS = ../mlzlib
   OCAML_LINK_FLAGS = -linkall
   OCamlProgram($(name), $(name))
   $(name)$(EXE): $(addsuffix .ml, $(name))

testlib: $(TESTS)$(EXE)

clean:
   $(CLEAN) $(TESTS)$(EXE)
